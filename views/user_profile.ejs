<link rel="stylesheet" href="<%= assetPath('css/user_profile.css') %>" />

<img src="<%= profile_user.avatar %>" alt="<%= profile_user.name %>"
width:"100">

<h1>Codeial/Profile Page</h1>

<% if(user.id == profile_user.id) { %>
<!-- if user matches show the form else only show profile info -->
<form
  action="/users/update/<%= profile_user.id %>"
  enctype="multipart/form-data"
  method="POST"
>
  <input
    type="text"
    placeholder="Your Name"
    name="name"
    value="<%= user.name %>"
    required
  />
  <input
    type="email"
    placeholder="Your Email"
    name="email"
    value="<%=user.email%>"
    required
  />
  <input type="file" name="avatar" placeholder="Profile Picture" />
  <input type="submit" value="Update" />
</form>

<% }else{ %>
<p>Name-<%= profile_user.name %></p>
<p>Email - <%= profile_user.email %></p>
<% } %>
